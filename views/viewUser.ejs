<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body  style="background-color: #63598556">
    <%- include('./components/navbar') -%>

        <!-- - Back to all users -->

        <!-- <div class="container mt-2">
          <a href="/" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div> -->
      
<div class="container "  style="margin-top: 120px; width: 50%; height: 150%; box-shadow: 5px 5px 3px 2px rgba(0, 0, 0, 0.329); border: 2px solid grey;border-radius: 5px; padding: 10px 55px;">
 <div class="container mt-2  text-center text-dark fw-30 p-2">
   <h3>View All Customer</h3>
 </div>

    <table class="table mt-2 text-left " style="padding: 20px;">
        <thead class=" text-dark ">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
            <th scope="col">Balance</th>
            <th scope="col">Action</th>
            <th scope="col">Remove</th>
            
          </tr>
        </thead>
        <tbody style="font-size: 20px;">
          <% if(data.length>0){%>
            <% data.forEach((e) => {%>
              <tr>
                <td><%= e.name %></td>
                <td><%= e.email %></td>
                <td><%= e.contact  %></td>
                <td><%= e.amount  %></td>
                <td>
                  <a href="/view/<%=e._id %>" class="btn" style="background-color: blueviolet; color: white; padding: 5px 10px;">View & Transfer</a>
                </td>
                <td>
                  <a href="/delete/<%=e._id %>"" class="btn btn-danger" >
                  <i class="fa fa-trash" ></i>
                </a>
                </td>
              </tr>
                            
              <%}) %>        
            
            <%}else{%>
              <tr class="bg-warning text-light">
                <td>
                  
                    No records Found!
                  
                </td>
              </tr>
            
              
              <%} %>
        
        
        </tbody>
      </table>
    </div>

    <%- include('./components/bootstrapScript') -%>
</body>
</html>