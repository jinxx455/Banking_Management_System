<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
    <style>
        .custom_view{
            display: flex;
        }
        .custom_view_left{
            flex-basis: 50%;
        }
        .custom_view_right{
            flex-basis: 50%;
        }
        #recAmountId:in-range {
            background-color: rgb(255, 255, 255);
        }
        #recAmountId:out-of-range {
            background-color: rgb(255 0 0 / 18%);
            color: black;
        }
        #recAmountId:in-range+label::after {
            content: "";
        }
        #recAmountId:out-of-range+label::after {
            content: "Please try with lower amount";
            font-size: 14px;
            position: relative;
            color: #f10202;
            text-shadow: 1px 1px black;
        }
    </style>
</head>
<body style="background-color: #63598556">
    <%- include('./components/navbar') -%>
    
        <!-- - Back to all users -->

        <!-- <div class="container mt-2">
          <a href="/data" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div> -->

      <!-- Sender Details -->
      <!-- <div class="container bg-primary  text-center p-2 mt-3">
      </div> -->
  <div class="container mt-2 text-center"  style="width:100%; box-shadow: 5px 5px 3px 2px rgba(0, 0, 0, 0.329); border: 2px solid grey;border-radius: 5px; padding: 15px;">
      <!-- <div class=" custom_view_left text-center" >
        <i class="far fa-user" style="font-size: 7rem;"></i>
       
      </div> -->
      <h3 class="text-dark " style="font-size: 35px; font-family: cursive; letter-spacing: 5px;">Sender Details</h3>
<br>
      <div class=" custom_view_right">
    <% data.forEach((e) => {%>
        <h4 style="font-size: 25px;">Name:  <span style="font-size: 18px; "><%= e.name %> </span></h4>
        <h4 style="font-size: 25px;">Email:  <span style="font-size: 18px; "><%= e.email %></span></h4>
        <h4 style="font-size: 25px;">Mobile: <span style="font-size: 18px; ">  <%= e.contact %></span></h4>
        <h4 style="font-size: 25px;">Balence: <span style="font-size: 18px; "><%= e.amount %> </span></h4>
        
    <%}) %>  
      </div>
     
  </div>
<!-- Reciver -->
  <div class="container    text-center p-2 mt-3">
    <h3 class="text-dark fw-4">Reciver Details</h3>
</div>
   <div class="container"  style="width: 40%; margin-bottom: 150px; height: 150%; box-shadow: 5px 5px 3px 2px rgba(0, 0, 0, 0.329); border: 2px solid grey;border-radius: 5px; padding: 15px;"x >
    <form action="/transfer" method="POST" >
        <div class="form-group mt-3 ">
          <label for="exampleInputEmail1">From</label>
          <% data.forEach((e) => {%>
            <input type="hidden" name="SenderID" value="<%= e._id %>">
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="SenderName" placeholder="Enter User Name" readonly value="<%= e.name %>">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="SenderEmail" placeholder="Enter User Name" readonly value="<%= e.email %>">
            
            <%}) %>

         
         
        </div>
        <div class="form-group  mt-3">
          <label for="exampleInputEmail1">TO</label>
          <select class="form-select" name="reciverName">
            <option selected>Select Reciver Name</option>
            <% records.forEach((e)=>{%>

              <option> <%= e.name %></option>
            <%}) %>
          
          </select>
         
        </div>
        <div class="form-group  mt-3">
            <select class="form-select"name="reciverEmail">
            <option selected>Select Reciver Email</option>
            <% records.forEach((e)=>{%>
              <option> <%= e.email %> </option>

            <%}) %>
           
          </select>
    
        </div>
        <div class="form-group  mt-3">
            <label for="exampleInputEmail1">Amount</label>

           

            <input type="Amount" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="transferAmount" placeholder="Enter Amount" required>
    
        <button type="submit" class="mt-3 text-center" style="width: 100%; background-color: blueviolet; border: 1px solid blueviolet; padding: 5px; border-radius: 5px;">Submit</button>
      </form>
   </div>
    
    <%- include('./components/bootstrapScript') -%>
</body>
</html>