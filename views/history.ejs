<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/headTag') -%>
  </head>
  <body style="background-color: #63598556">
    <%- include('./components/navbar') -%>

    <!-- - Back to all users -->

    <!-- <div class="container mt-2">
      <a href="/" class="btn  fw-bold">&larr; Back</a>
    </div> -->

    <div
      class="container"
      style="
        margin-top: 150px;
        width: 40%;
        height: 150%;
        box-shadow: 5px 5px 3px 2px rgba(0, 0, 0, 0.329);
        border: 2px solid grey;
        border-radius: 5px;
        padding: 10px 35px;
        font-size: 16px;
      "
    >
      <div class="container mt-2 text-dark text-center text-light fw-30 p-2">
        <h3>All Transactions</h3>
      </div>

      <table class="table mt-2" style="padding: 10px">
        <thead class="text-dark">
          <tr>
            <th scope="col">Sender</th>
            <th scope="col">Reciever</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% if(data.length>0){%> <% data.forEach((e) => {%>
          <tr>
            <td><%= e.sEmail %></td>
            <td><%= e.rEmail %></td>
            <td><%= e.amount %></td>
            <td><%= e.date %></td>
            <td>
              <a
                href="/remove/<%=e._id %>"
                class="btn btn-danger"
                style="width: 40px; height: 40px"
              >
                <i class="fa fa-minus"></i>
              </a>
            </td>
          </tr>

          <%}) %> <%}else{%>
          <tr class="bg-warning text-light">
            <td>No records Found!</td>
          </tr>

          <%} %>
        </tbody>
      </table>
    </div>

    <%- include('./components/bootstrapScript') -%>
  </body>
</html>
